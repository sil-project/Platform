{% extends 'SyliusShopBundle:Email:emailTheme.html.twig' %}

{% block subject %}
    {{ 'lisem.email.emailVerification.title'|trans({}, 'messages') }}
{% endblock %}

{% block body_content %}
    {% set url = channel.hostname is not null ? 'http://' ~ channel.hostname ~ path('sylius_shop_user_verification', { 'token': user.emailVerificationToken}) : url('sylius_shop_user_verification', { 'token': user.emailVerificationToken}) %}
    {% autoescape %}
    {{ 'lisem.email.emailVerification.content'|trans({'%url%':url}, 'messages')|raw }}
    {% endautoescape %}
{% endblock %}
