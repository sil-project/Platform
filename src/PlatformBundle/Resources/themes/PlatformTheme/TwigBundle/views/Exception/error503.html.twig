{% set layout = 'TwigBundle:Exception:back_exception_layout.html.twig' %}

{% if app.request.requestUri starts with sil.url_prefix %}
    {% set layout = 'TwigBundle:Exception:back_exception_layout.html.twig' %}
{% elseif status_code == 503 %}
    {% set layout = 'TwigBundle:Exception:empty_layout.html.twig' %}
{% endif %}

{% extends layout %}

{% block exception_content %}
<div class="exceptionContainer">
    <img src="{{ asset('/bundles/blastdecorator/logo-li.png') }}" class="errorImage"/>
    <h1>{{'http_error.maintenance_in_progress'|trans({},'messages')}}</h1>

    <p>
        {{('http_error.'~status_code)|trans({},'messages')}}
    </p>

    <p>
        <a href="">{{"http_error.please_be_patient"|trans}}</a>.
    </p>
</div>
{% endblock %}
