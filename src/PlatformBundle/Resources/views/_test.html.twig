    <div class="ui padded grid">

        {{ blast_widget_panel(null, 'Panneau sans titre...', 'four wide column') }}

    </div>

    <p></p>

    <div class="ui padded grid">
        <div class="six wide column">
            {{ blast_widget_card('Titre de la card', entity, [
                {'name':'[name]','label':'Nom'},
                {'name':'[description]','label':'Description'}
            ], form, 'fuild' )}}
        </div>
    </div>
    <div class="ui padded grid">
        <div class="six wide column">
            {{ blast_widget_card('Titre de la card', entity, [
                {'name':'[name]','label':'Nom'},
                {'name':'[description]','label':'Description'}
            ], smallForm, 'fuild' )}}
        </div>
    </div>
    <div class="ui padded grid">
        <div class="six wide column">
            {{ blast_widget_card('Titre de la card', entity, [
                {'name':'[name]','label':'Nom'},
                {'name':'[description]','label':'Description'}
            ], null, 'fuild' )}}
        </div>
    </div>

    <div class="ui padded grid">
        <div class="six wide column">
            booleans :
