            <div class="ui divider"></div>
            double :
            {{ blast_display_data(dataTypes.double) }}
            <div class="ui divider"></div>
            string :
            {{ blast_display_data(dataTypes.string) }}
            <div class="ui divider"></div>
            array :
            {{ blast_display_data(dataTypes.array) }}
            <div class="ui divider"></div>
            object :
            {{ blast_display_data(dataTypes.object) }}
