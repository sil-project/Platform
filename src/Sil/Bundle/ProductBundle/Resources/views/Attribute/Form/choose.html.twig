<div class="ui clearing very basic segment">
    {{form_start(form, {'action': form.vars.action})}}

    {{ form_row(form.attributeType) }}

    {{ form_rest(form) }}

    <div class="actions">
        {{ blast_widget_field('link', {
            label: 'Annuler',
            class: 'button right floated cancel',
            icon: 'undo'
        }) }}

        {{ blast_widget_field('submit', {
            label: 'Enregistrer',
            class: 'left floated',
            icon: 'save'
        }) }}
    </div>

    {{ form_end(form) }}
</div>
