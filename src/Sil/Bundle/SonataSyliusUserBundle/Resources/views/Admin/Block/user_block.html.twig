{% trans_default_domain "sonata_sylius_user" %}

<div class="thumbnail">
    {% if app.user %}
    <h4>{{ app.user.username }}</h4>
    <ul class="listing-role">
        {% for role in app.user.roles if role != 'ROLE_USER' and role != 'ROLE_ALLOWED_TO_SWITCH' %}
            <li>
                <i class="glyphicon glyphicon-asterisk {% if role == 'ROLE_SUPER_ADMIN'%}admin{% endif %}"></i>
                {{ ('roles.'~role)|trans }}
            </li>
        {% endfor %}
    </ul>
    {% endif %}

    {% if routeExists('sonata_sylius_user_logout') %}
    <div class="panel-body">
        <a href="{{ path('sonata_sylius_user_logout') }}" class="btn btn-danger">
            <i class="fa fa-sign-out"></i> {{ 'button.logout'|trans }}
        </a>
    </div>
    {% endif %}
</div>
