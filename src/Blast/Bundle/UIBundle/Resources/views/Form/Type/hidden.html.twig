{# ##################################################################################### #}
{#    INPUT CLASS                                                                        #}
{# ##################################################################################### #}

{% set fieldClass = null %}

{% if field.class is defined %}
    {% set fieldClass = field.class %}
{% endif %}


{# ##################################################################################### #}
{#    INPUT ATTR                                                                         #}
{# ##################################################################################### #}

{% set attrs = [] %}

{% if field.attr is defined %}
    {% set attrs = field.attr %}
{% endif %}

{# ##################################################################################### #}
{#    INPUT                                                                              #}
{# ##################################################################################### #}

<input
    type="hidden"
    name="{{ field.name }}"
    tabindex="-1"
    {% if field.value is defined %}value="{{ field.value }}"{% endif %}
    {% for attr, value in attrs %}{{attr}}="{{value}}" {% endfor %}
    {% if fieldClass is not null %} class="{{ fieldClass }}" {% endif %}
/>
