{# ##################################################################################### #}
{#    INPUT CLASS                                                                        #}
{# ##################################################################################### #}

{% set fieldClass = 'ui' %}

{% if field.class is defined %}
    {% set fieldClass = 'ui ' ~ field.class %}
{% endif %}

{# ##################################################################################### #}
{#    INPUT ICON                                                                         #}
{# ##################################################################################### #}

{% set fieldIcon = null %}

{% if field.icon is defined %}
    {% set fieldIcon = field.icon %}
    {% set fieldClass = fieldClass ~ ' labeled icon' %}
{% endif %}

{# ##################################################################################### #}
{#    INPUT SRC                                                                          #}
{# ##################################################################################### #}

{% set linkSrc = '#' %}

{% if field.src is defined %}
    {% set linkSrc = field.src %}
{% endif %}

{# ##################################################################################### #}
{#    INPUT ATTR                                                                         #}
{# ##################################################################################### #}

{% set attrs = [] %}

{% if field.attr is defined %}
    {% set attrs = field.attr %}
{% endif %}

{# ##################################################################################### #}
{#    INPUT                                                                              #}
{# ##################################################################################### #}

<a
    href="{{ linkSrc }}"
    class="{{ fieldClass }}"
    tabindex="1"
    {% for attr, value in attrs %}{{attr}}="{{value}}" {% endfor %}
>
    {% spaceless %}
        {% if fieldIcon is not null %}
            <i class="{{ fieldIcon }} icon"></i>
        {% endif %}

        {{ field.label }}
    {% endspaceless %}
</a>
