{% block modal %}
    <div data-modal="{{ identifier }}" class="ui modal {{ classes }}">
        <div class="ui icon header">
            <i class="answer icon"></i>
            {{ title }}
        </div>
        <div class="content">
            {{ content|raw }}
        </div>
        {% if actions|length > 0 %}
            <div class="actions">
                {% spaceless %}
                    {% for action in actions %}

                        {% set actionParameters = {
                            'label': '',
                            'class': '',
                            'icon': ''
                        } | merge(action) %}

                        {{ blast_widget_field(action.type, actionParameters) }}
                    {% endfor %}
                {% endspaceless %}
            </div>
        {% endif %}
    </div>
{% endblock modal %}
