{% spaceless %}

    {{ form_start(form, {'class':'ui form data'}) }}

    {% block flashes %}
        <div class="ui flash-container">
            {% for error in form.vars.errors %}
                {% include '@BlastUI/Layout/Blocks/flash_message.html.twig' with {label: 'error', message: error.message} %}
            {% endfor %}
        </div>
    {% endblock flashes %}

    {% for fieldname, field in form.children %}
        {{ form_row(attribute(form, fieldname)) }}
    {% endfor %}

    <div class="ui divider"></div>

    {{ blast_widget_field('submit', {
        label: 'Enregistrer',
        class: 'right floated',
        icon: 'save'
    }) }}

    {{ blast_widget_field('link', {
        label: 'Annuler',
        class: 'button left floated close',
        icon: 'undo'
    }) }}

    {{ form_rest(form) }}

    {{ form_end(form) }}

{% endspaceless %}
