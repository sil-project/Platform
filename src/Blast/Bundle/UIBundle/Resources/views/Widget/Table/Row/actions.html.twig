<div class="mini ui buttons">
    {% spaceless %}
        {% for action in table.actions %}

            {% set actionPath = '#' %}

            {% if action.routeName is defined %}

                {% set routeParams = [] %}

                {% if action.routeParams is defined %}
                    {% set routeParams = action.routeParams %}
                {% endif %}

                {% set actionPath = blastui_build_path(action.routeName, routeParams, item, '%item%') %}
            {% endif %}

            {% if loop.index0 == 0 %}

                <a class="primary mini ui button" href="{{ actionPath }}">
                    <i class="{{ action.icon }} icon"></i>
                    {{ action.label }}
                </a>

            {% else %}

                {% if loop.index0 == 1 %}

                    <div class="secondary mini ui floating dropdown icon button">
                        <i class="dropdown icon"></i>
                        <div class="menu">

                        {% endif %}

                        <a class="item" href="{{ actionPath }}">
                            <i class="{{ action.icon }} icon"></i>
                            {{ action.label }}
                        </a>

                        {% if loop.index0 == loop.last %}

                        </div>
                    </div>

                {% endif %}

            {% endif %}

        {% endfor %}
    {% endspaceless %}
</div>
