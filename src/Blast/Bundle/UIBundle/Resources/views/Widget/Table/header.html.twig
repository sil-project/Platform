<tr>
    {% if allowSelection == true %}
        <th>
            <div class="ui fitted checkbox select all">
                <input type="checkbox">
                <label></label>
            </div>
        </th>
    {% endif %}

    {% spaceless %}
        {% for header in table.headers %}
            <th>
                {{ header.label }}
            </th>
        {% endfor %}
    {% endspaceless %}

    {% if table.actions | length > 0 %}
        <th>
            &nbsp;
        </th>
    {% endif %}
</tr>
